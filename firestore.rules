rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // A user can only write to their own document, but any signed-in user can read it (for member emails).
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Rules for a user's private list entries within their own document space.
    match /users/{userId}/lists/{listId} {
      // A user can perform any action on their own lists.
      allow read, write: if isSignedIn() && request.auth.uid == userId;

      // Additionally, allow a shared list's creator to "disconnect" a user's list after removing them.
      // This is a very specific write permission.
      allow update: if isSignedIn() &&
                     // Ensure the request comes from the owner of the shared list
                     get(/databases/$(database)/documents/sharedLists/$(resource.data.sharedListId)).data.createdBy == request.auth.uid &&
                     // Ensure the update ONLY changes the 'isShared' and 'sharedListId' fields to disconnect the list
                     request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isShared', 'sharedListId']) &&
                     resource.data.isShared == true &&
                     request.resource.data.isShared == false;

      // Allow the creator to delete the private list after removing the user.
      allow delete: if isSignedIn() &&
                     get(/databases/$(database)/documents/sharedLists/$(resource.data.sharedListId)).data.createdBy == request.auth.uid;
    }

    match /sharedLists/{listId} {
      // Allow CREATION by any signed-in user, but only if they set themselves as creator and member.
      allow create: if isSignedIn()
                    && request.resource.data.createdBy == request.auth.uid
                    && request.auth.uid in request.resource.data.members;

      // Allow READ access to any signed-in user (to allow checking if list exists for joining).
      allow read: if isSignedIn();

      // Allow UPDATES with granular control:
      allow update: if isSignedIn() &&
                    // EITHER: An existing member is making an update...
                    (
                      resource.data.members.hasAny([request.auth.uid]) &&
                      // ... and they are either NOT changing the members list (e.g., editing articles),
                      // OR they ARE the creator (who is allowed to change the members list).
                      (request.resource.data.members == resource.data.members || request.auth.uid == resource.data.createdBy)
                    )
                    // OR: A new user is joining the list for the first time.
                    ||
                    (
                      !resource.data.members.hasAny([request.auth.uid]) &&
                      request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members']) &&
                      request.resource.data.members == resource.data.members.concat([request.auth.uid])
                    );

      // Allow the creator to delete the entire shared list.
      allow delete: if isSignedIn() && request.auth.uid == resource.data.createdBy;
    }
  }
}
